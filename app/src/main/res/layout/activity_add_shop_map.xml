<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <fragment
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="537dp"
            android:id="@+id/map"
            tools:context=".MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment" android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp" android:layout_alignParentStart="true" android:layout_marginStart="0dp"
            android:layout_marginBottom="9dp" android:layout_marginTop="-2dp"
            android:layout_alignParentTop="true" android:layout_above="@+id/confirm_button"/>
    <Button
            android:text="confirm location"
            android:layout_width="wrap_content"
            android:layout_height="58dp" android:id="@+id/confirm_button" android:layout_alignParentEnd="true"
            android:layout_marginEnd="91dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp" android:layout_alignParentStart="true"
            android:layout_marginStart="100dp"/>
</RelativeLayout>